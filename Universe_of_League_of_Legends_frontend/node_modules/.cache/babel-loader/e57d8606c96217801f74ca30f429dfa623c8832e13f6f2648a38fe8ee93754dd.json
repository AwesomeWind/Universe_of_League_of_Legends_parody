alculatedHeight() {\r\n            const parentElement = document.querySelector(\".parent\");\r\n            const siblingElement = document.querySelector(\".sibling\");\r\n            const parentHeight = parentElement.offsetHeight;\r\n            const siblingHeight = siblingElement.offsetHeight;\r\n            return parentHeight * 2 - siblingHeight;\r\n        },\r\n    },\r\n    //监控data中的数据变化\r\n    watch: {\r\n        async hero(n, o) {\r\n            document.title = n.translation + \" - \" + this.$route.meta.title;\r\n            this.region = this.regional.find(\r\n                (item) => item.formerly === this.hero.relevantRegion\r\n            );\r\n            this.race = this.races.find(\r\n                (item) => item.formerly === this.hero.races\r\n            );\r\n            this.role = this.roles.find(\r\n                (item) => item.title === this.hero.role\r\n            );\r\n            if (this.hero.relatedPeople != \"\") {\r\n                this.hero.relatedPeople = await Promise.all(\r\n                    this.hero.relatedPeople\r\n                        .split(\",\")\r\n                        .map(async function (formerly) {\r\n                            try {\r\n                                const response = await axios.get(\r\n                                    `http://localhost:8089/api/findHero?formerly=${formerly}`\r\n                                );\r\n                                return response.data;\r\n                            } catch (error) {\r\n                                console.error(error);\r\n                            }\r\n                        })\r\n                );\r\n            }\r\n            this.update = !this.update;\r\n        },\r\n    },\r\n    //方法集合\r\n    methods: {\r\n        findHero() {\r\n            axios\r\n                .get(\r\n                    `http://localhost:8089/api/findHero?formerly=${this.$route.params.heroId}`\r\n                )\r\n                .then((response) => {\r\n                    this.hero = response.data;\r\n                })\r\n                .catch((error) => {\r\n                    console.error(error);\r\n                });\r\n        },\r\n        createScrollBar() {\r\n            const related_people = document.querySelector(\".related_people\");\r\n            const related_people_height = related_people.offsetHeight;\r\n            console.log(\"related_people height:\", related_people_height);\r\n      },\r\n        addmo\r\n    },\r\n    beforeCreate() {}, //生命周期 - 创建之前\r\n    created() {\r\n        this.findHero();\r\n    }, //生命周期 - 创建完成（可以访问当前this实例）\r\n    beforeMount() {}, //生命周期 - 挂载之前\r\n    mounted() {}, //生命周期 - 挂载完成（可以访问DOM元素）\r\n    beforeUpdate() {}, //生命周期 - 更新之前\r\n    updated() {\r\n       \r\n    }, //生命周期 - 更新之后\r\n    beforeDestroy() {}, //生命周期 - 销毁之前\r\n    destroyed() {}, //生命周期 - 销毁完成\r\n    activated() {}, //如果页面有keep-alive缓存功能，这个函数会触发\r\n};\r\n</script>\r\n<style lang=\"css\" src=\"../assets/css/Clear_style.css\" scoped></style>\r\n<style lang=\"css\" src=\"../assets/css/hero_information.css\" scoped></style>\r\n<style>\r\nbody {\r\n    background-color: #09090c;\r\n}\r\n.link > li:nth-child(3) > a {\r\n    color: white !important;\r\n    border-bottom: solid 1px #c9aa71;\r\n}\r\n</style>"],"mappings":"AA8KA,SAASA,QAAQ,EAAEC,MAAK,QAAS,KAAK;AACtC,SAASC,QAAO,QAAS,MAAM;AAC/B,OAAOC,KAAI,MAAO,OAAO;AAEzB,eAAe;EACXC,IAAI,EAAE,kBAAkB;EACxBC,UAAU,EAAE,CAAC,CAAC;EACdC,KAAKA,CAAA,EAAG;IACJ;IACA,MAAMC,IAAG,GAAIP,QAAQ,CAAC;MAClBQ,IAAI,EAAE,CAAC,CAAC;MACRC,MAAM,EAAE,CAAC,CAAC;MACVC,IAAI,EAAE,CAAC,CAAC;MACRC,IAAI,EAAE,CAAC,CAAC;MACRC,aAAa,EAAE,EAAE;MACjBC,MAAM,EAAE;IACZ,CAAC,CAAC;IACF,OAAO;MACH,GAAGZ,MAAM,CAACM,IAAI;IAClB,CAAC;EACL,CAAC;EACD;EACAO,QAAQ,EAAE;IACN,GAAGZ,QAAQ,CAAC,CAAC,UAAU,CAAC,CAAC;IACzB,GAAGA,QAAQ,CAAC,CAAC,OAAO,CAAC,CAAC;IACtB,GAAGA,QAAQ,CAAC,CAAC,OAAO,CAAC,CAAC;IACtB;IACAa,gBAAgBA,CAAA,EAAG;MACf,MAAMC,aAAY,GAAIC,QAAQ,CAACC,aAAa,CAAC,SAAS,CAAC;MACvD,MAAMC,cAAa,G